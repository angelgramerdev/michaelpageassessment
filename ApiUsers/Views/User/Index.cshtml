
@{
    List<Domain.Entities.User> users = (List<Domain.Entities.User>)ViewBag.Users;
    int a = 0 + 1;
}
<!DOCTYPE html>
<html>
<head>
    <title>Título de la página</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script>
        function redirectToEditView(idUser)
        {
            window.location.href ="ViewEditUser?id="+idUser
        }

        function deleteUser(idUser)
        {
            window.location.href = "Delete?id=" + idUser
        }
        
    </script>
</head>
<div class="container">
    <body>
    <a class="btn btn-success" href="@Url.Action("ViewCreateUser")" role="button">Create User</a>
    <br />
    <table class="table">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Actions</th>
        </tr>
        @foreach(var user in users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>
                    <button type="button" class="btn btn-success" onclick="redirectToEditView(@user.Id)">Edit</button>
                    <button type="button" class="btn btn-success" onclick="deleteUser(@user.Id)">Delete</button>
            </td>
            </tr>
        }
        
    </table>
</body>
</div>
</html>